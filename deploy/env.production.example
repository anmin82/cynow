# =============================================================================
# CYNOW 운영 환경 설정 파일
# =============================================================================
# 사용법: 이 파일을 /home/cynow/cynow/.env로 복사 후 실제 값 입력
# cp env.production.example .env && nano .env
# =============================================================================

# -----------------------------------------------------------------------------
# Django 핵심 설정
# -----------------------------------------------------------------------------
# 운영 환경에서는 반드시 False
DEBUG=False

# 32자 이상의 랜덤 문자열 (생성: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())")
SECRET_KEY=여기에-강력한-시크릿키-입력-최소32자이상

# 허용 호스트 (쉼표 구분)
ALLOWED_HOSTS=10.78.30.98,localhost,127.0.0.1

# -----------------------------------------------------------------------------
# 서브패스 배포 설정
# -----------------------------------------------------------------------------
# NGINX 리버스 프록시 서브패스 (기본값: /cynow)
FORCE_SCRIPT_NAME=/cynow

# CSRF 신뢰 출처 (쉼표 구분)
CSRF_TRUSTED_ORIGINS=http://10.78.30.98

# 쿠키 경로
CSRF_COOKIE_PATH=/cynow/
SESSION_COOKIE_PATH=/cynow/

# -----------------------------------------------------------------------------
# PostgreSQL 데이터베이스
# -----------------------------------------------------------------------------
DB_ENGINE=postgresql
DB_NAME=cycy_db
DB_USER=cynow_user
DB_PASSWORD=your-secure-password-here
DB_HOST=localhost
DB_PORT=5432

# -----------------------------------------------------------------------------
# Scale Gateway API (저울 TCP 연동)
# -----------------------------------------------------------------------------
# 저울 TCP 리스너 설정
SCALE_GATEWAY_LISTEN_HOST=0.0.0.0
SCALE_GATEWAY_LISTEN_PORT=4001
SCALE_GATEWAY_IDLE_TIMEOUT_SEC=10

# -----------------------------------------------------------------------------
# (참고) 개발/디버깅 시 변경할 설정
# -----------------------------------------------------------------------------
# DEBUG=True  # 상세 오류 페이지 표시 (운영에서는 금지!)



